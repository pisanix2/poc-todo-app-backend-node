    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "name": "Launch TODO API",
            "program": "${workspaceFolder}/src/launchers/index.js",
            "env": {
              "LAUNCHER_NAME": "todo",
              "PORT": "8082",
              "NODE_PATH": "${workspaceFolder}/src"
            }
        },
        {
          "type": "node",
          "request": "launch",
          "console": "integratedTerminal",
          "name": "Launch whatsapp API",
          "program": "${workspaceFolder}/src/launchers/index.js",
          "env": {
            "LAUNCHER_NAME": "whatsapp",
            "PORT": "8086",
            "NODE_PATH": "${workspaceFolder}/src"
          }
        },
        {
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "name": "Launch Worker",
            "program": "${workspaceFolder}/src/launchers/index.js",
            "env": {
              "LAUNCHER_NAME": "worker",
              "NODE_PATH": "${workspaceFolder}/src"
            }
        }
    ]
}